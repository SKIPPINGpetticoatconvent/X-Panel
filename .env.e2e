# E2E Testing Environment Configuration
# This file contains environment variables specifically for E2E testing
# to isolate test environment from user/production environment

# Test environment identifier
GO_ENV=test

# Database configuration - use temporary test directory
XUI_DB_FOLDER=/tmp/x-panel-e2e/db

# Log configuration - use temporary test directory
XUI_LOG_FOLDER=/tmp/x-panel-e2e/logs
XUI_LOG_LEVEL=debug

# Debug mode for detailed output during testing
XUI_DEBUG=true

# Binary and SNI folders
XUI_BIN_FOLDER=bin
XUI_SNI_FOLDER=bin/sni

# Container mode for proper network binding
XPANEL_RUN_IN_CONTAINER=true

# Disable fail2ban during testing to avoid test interference
XUI_ENABLE_FAIL2BAN=false

# Test-specific web panel settings
XUI_TEST_PORT=13688
XUI_TEST_USERNAME=e2e_admin
XUI_TEST_PASSWORD=e2e_test_pass_123